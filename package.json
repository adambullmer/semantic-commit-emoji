{
  "name": "root",
  "version": "",
  "private": true,
  "scripts": {
    "build": "yarn workspaces foreach --all --verbose --interlaced --parallel --topological run build",
    "lint:ci": "yarn workspaces foreach --all --verbose --interlaced --parallel run lint:ci",
    "test": "yarn run vitest --ui",
    "test:ci": "yarn run vitest",
    "prerelease": "yarn build",
    "release": "yarn workspaces foreach --all --verbose --interlaced --topological run release",
    "publish": "yarn workspaces foreach --all --verbose --interlaced --topological run release:tarball",
    "prepare": "husky"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@eslint/js": "^9.10.0",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.3.3",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.16.5",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "@yarnpkg/pnpify": "^4.1.1",
    "commitlint-config-semantic-commit-emoji": "workspace:*",
    "commitlint-plugin-semantic-commit-emoji": "workspace:*",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-formatter-junit": "^8.40.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "semantic-commit-emoji": "workspace:*",
    "semantic-commit-emoji-config": "workspace:*",
    "semantic-release": "^22.0.0",
    "semantic-release-monorepo": "^8.0.2",
    "semantic-release-yarn": "^3.0.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.5.0",
    "vitest": "^2.1.0"
  },
  "packageManager": "yarn@4.4.1"
}
